function doGet(e) {
  return HtmlService.createHtmlOutputFromFile('meranti');
}

function getStudentData(noAbsen) {
  var sheet = SpreadsheetApp.openById('10KFQXUBf72qDkctYq_e5Xp4QZyULWXKIteRDAGhLP1E').getSheetByName('Sheet1');
  var data = sheet.getDataRange().getValues();

  for (var i = 1; i < data.length; i++) {
    if (data[i][1].toString() === noAbsen) { // Memverifikasi nomor absen
      return {
        namaDepan: data[i][2],
        namaBelakang: data[i][3],
        kelas: data[i][4],
        alamat: data[i][5]
      };
    }
  }
  return null;
}
